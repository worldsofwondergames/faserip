<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      <div class="char-info-grid">
        <div class="form-group" style="grid-column: span 2">
          <label>Entity Type</label>
          <input type="text" name="system.entityType" value="{{system.entityType}}" placeholder="Cosmic, Abstract, Dimensional, etc."/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Rank Reference Bar --}}
  <div class="rank-reference-bar">
    <div class="rank-cell"><span class="rank-name">Feeble</span><span class="rank-value">2</span></div>
    <div class="rank-cell"><span class="rank-name">Poor</span><span class="rank-value">4</span></div>
    <div class="rank-cell"><span class="rank-name">Typical</span><span class="rank-value">6</span></div>
    <div class="rank-cell"><span class="rank-name">Good</span><span class="rank-value">10</span></div>
    <div class="rank-cell"><span class="rank-name">Excellent</span><span class="rank-value">20</span></div>
    <div class="rank-cell"><span class="rank-name">Remarkable</span><span class="rank-value">30</span></div>
    <div class="rank-cell"><span class="rank-name">Incredible</span><span class="rank-value">40</span></div>
    <div class="rank-cell"><span class="rank-name">Amazing</span><span class="rank-value">50</span></div>
    <div class="rank-cell"><span class="rank-name">Monstrous</span><span class="rank-value">75</span></div>
    <div class="rank-cell"><span class="rank-name">Unearthly</span><span class="rank-value">100</span></div>
    <div class="rank-cell"><span class="rank-name">Shift X</span><span class="rank-value">150</span></div>
    <div class="rank-cell"><span class="rank-name">Shift Y</span><span class="rank-value">200</span></div>
    <div class="rank-cell"><span class="rank-name">Shift Z</span><span class="rank-value">500</span></div>
  </div>

  {{!-- Main Abilities Section --}}
  <section class="abilities-section">
    {{!-- Abilities Table --}}
    <div class="abilities-table-container">
      <table class="abilities-table">
        <thead>
          <tr>
            <th></th>
            <th>Rank</th>
            <th>Value</th>
            <th class="col-green">Green</th>
            <th class="col-yellow">Yellow</th>
            <th class="col-red">Red</th>
          </tr>
        </thead>
        <tbody>
          {{#each system.abilities as |ability key|}}
          <tr>
            <td class="ability-name rollable" data-roll-type="ability" data-ability="{{key}}">
              {{localize (lookup @root.config.abilities key)}}
            </td>
            <td class="rank-display">{{ability.abbr}}</td>
            <td class="value-cell">
              <div class="value-adjust">
                <a class="adjust-btn minus" data-field="system.abilities.{{key}}.value" data-delta="-1"><i class="fas fa-minus"></i></a>
                <input type="number" class="ability-value" name="system.abilities.{{key}}.value"
                       value="{{ability.value}}" data-dtype="Number" data-ability="{{key}}"/>
                <a class="adjust-btn plus" data-field="system.abilities.{{key}}.value" data-delta="1"><i class="fas fa-plus"></i></a>
              </div>
            </td>
            <td class="feat-green">{{ability.feat.green}}</td>
            <td class="feat-yellow">{{ability.feat.yellow}}</td>
            <td class="feat-red">{{ability.feat.red}}</td>
          </tr>
          {{/each}}
          {{!-- Resources Row --}}
          <tr class="resources-row">
            <td class="ability-name">Resources</td>
            <td class="rank-display">{{system.resources.abbr}}</td>
            <td class="value-cell">
              <div class="value-adjust">
                <a class="adjust-btn minus" data-field="system.resources.value" data-delta="-1"><i class="fas fa-minus"></i></a>
                <input type="number" name="system.resources.value" value="{{system.resources.value}}" data-dtype="Number"/>
                <a class="adjust-btn plus" data-field="system.resources.value" data-delta="1"><i class="fas fa-plus"></i></a>
              </div>
            </td>
            <td class="feat-green"></td>
            <td class="feat-yellow"></td>
            <td class="feat-red"></td>
          </tr>
        </tbody>
      </table>
    </div>

    {{!-- Secondary Stats Panel --}}
    <div class="secondary-stats-panel">
      <div class="stat-box health-box">
        <span class="stat-label">Health</span>
        <span class="stat-formula">F + A + S + E</span>
        <div class="stat-value">
          <input type="number" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
          <span>/</span>
          <span class="stat-max">{{system.health.max}}</span>
        </div>
      </div>

      <div class="stat-box karma-box">
        <span class="stat-label">Karma</span>
        <span class="stat-formula">R + I + P</span>
        <div class="stat-value">
          <input type="number" name="system.karma.value" value="{{system.karma.value}}" data-dtype="Number"/>
          <span>/</span>
          <span class="stat-max">{{system.karma.max}}</span>
        </div>
      </div>

      <div class="stat-box">
        <span class="stat-label">Karma Bank</span>
        <div class="stat-value">
          <input type="number" name="system.karmaBank" value="{{system.karmaBank}}" data-dtype="Number" placeholder="0"/>
        </div>
      </div>

      <div class="stat-box">
        <span class="stat-label">Popularity</span>
        <div class="stat-value">
          <input type="number" name="system.popularity.value" value="{{system.popularity.value}}" data-dtype="Number"/>
        </div>
      </div>
    </div>
  </section>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="powers">Powers</a>
    <a class="item" data-tab="biography">Biography</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Powers Tab --}}
    <div class="tab powers" data-group="primary" data-tab="powers">
      <header class="items-header">
        <h3>Powers / Cosmic Abilities</h3>
        <div class="item-controls">
          <a class="item-control item-create" data-type="power" title="Add Power">
            <i class="fas fa-plus"></i> Add
          </a>
        </div>
      </header>
      <ol class="items-list">
        {{#each powers as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-image">
            <img src="{{item.img}}" title="{{item.name}}"/>
          </div>
          <h4 class="item-name rollable" data-roll-type="item">{{item.name}}</h4>
          <div class="item-rank">{{rankAbbr item.system.value}} ({{item.system.value}})</div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}
      </ol>

      {{!-- Special Rules --}}
      <div class="form-group" style="margin-top: 10px;">
        <label>Immunities</label>
        <textarea name="system.immunities" rows="2" style="width:100%">{{system.immunities}}</textarea>
      </div>
      <div class="form-group">
        <label>Special Rules</label>
        <textarea name="system.specialRules" rows="3" style="width:100%">{{system.specialRules}}</textarea>
      </div>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="biography">
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{> "systems/faserip/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>
