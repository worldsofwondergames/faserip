<form class="feat-roll-form">
  <div class="form-group ability-display">
    <label>{{localize "FASERIP.Dialog.Ability"}}</label>
    <span class="ability-info">{{abilityLabel}} ({{abilityRank}} {{abilityValue}})</span>
  </div>

  <div class="form-group">
    <label>{{localize "FASERIP.Dialog.ActionType"}}</label>
    <select name="actionType">
      {{#each actionChoices}}
      <option value="{{this.key}}">{{this.label}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label>{{localize "FASERIP.Dialog.Intensity"}}</label>
    <select name="intensity">
      {{#each intensityChoices}}
      <option value="{{this.key}}">{{this.label}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label>{{localize "FASERIP.Dialog.ColumnShift"}}</label>
    <select name="columnShift">
      {{#each columnShiftOptions}}
      <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group preview">
    <div class="preview-row">
      <label>{{localize "FASERIP.Dialog.EffectiveRank"}}:</label>
      <span class="effective-rank">{{abilityRank}}</span>
    </div>
    <div class="preview-row">
      <label>{{localize "FASERIP.Dialog.RequiredResult"}}:</label>
      <span class="required-color feat-green">{{localize "FASERIP.Color.Green"}}</span>
    </div>
    <div class="shift-warning" style="display: none;"></div>
  </div>

  <div class="form-buttons">
    <button type="button" class="roll-feat">
      <i class="fas fa-dice-d20"></i> {{localize "FASERIP.Dialog.Roll"}}
    </button>
    <button type="button" class="cancel">
      {{localize "Cancel"}}
    </button>
  </div>
</form>
